<div class="container">
  <p id="notice"><%= notice %></p>

<h1 class="bg-light ml-3">Your Created Events</h1>
  <table class="table table-striped table-bordered table-hover ml-3">
   <thead class="thead-light">
     <tr>
       <th>Title</th>
       <th>Date</th>
       <th>Description</th>
     </tr>
    </thead>
  </tbody>
   <%= render "created_events" %>
  </tbody>
  </table>
<br>
<h1 class="bg-light ml-3">Events Attending</h1>
<br>
<h3 class = "bg-light ml-3">Upcoming Events</h3>
  <table class="table table-striped table-bordered table-hover ml-3">
   <thead class="thead-light">
     <tr>
       <th>Title</th>
       <th>Date</th>
       <th>Description</th>
     </tr>
    </thead>
  </tbody>
   <%= render "attending_event" %>
  </tbody>
  </table>
  <br>
  <h3 class = "bg-light ml-3">Past Events</h3>
  <table class="table table-striped table-bordered table-hover ml-3">
   <thead class="thead-light">
     <tr>
       <th>Title</th>
       <th>Date</th>
       <th>Description</th>
     </tr>
    </thead>
  </tbody>
   <%= render "attended_event" %>
  </tbody>
  </table>
  <%= link_to 'Create Event', new_event_path(@user), class: "btn text-light bg-success ml-3" %>
  <%= link_to 'Back', users_path, class: "btn text-light bg-info ml-3" %>
