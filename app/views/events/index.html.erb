<div class="container">
  <p id="notice"><%= notice %></p>

<h1 class="bg-light ml-3">Upcoming Events</h1>
  <table class="table table-striped table-bordered table-hover ml-3">
   <thead class="thead-light">
     <tr>
       <th>Title</th>
       <th>Date</th>
       <th>Description</th>
       <th>Host</th>
       <th colspan="3">Attend</th>
     </tr>
    </thead>
  </tbody>
   <%= render "upcoming_events" %>
  </tbody>
  </table>
<br>
<h1 class="bg-light ml-3">Past Events</h1>
  <table class="table table-striped table-bordered table-hover ml-3">
   <thead class="thead-light">
     <tr>
       <th>Title</th>
       <th>Date</th>
       <th>Description</th>
       <th>Host</th>
       <th colspan="3">Attend</th>
     </tr>
    </thead>
  </tbody>
   <%= render "past_events" %>
  </tbody>
  </table>
  <%= link_to 'Back', users_path, class: "btn text-light bg-info ml-3" %>

</div>