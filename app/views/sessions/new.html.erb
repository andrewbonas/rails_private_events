<div class="container mt-3 ">
  <div class="row">
    <div class="col-12 col-lg-6">
      <h2 class="bg-light">Log In </h2>
        <div class="mt-5 mb-3">
          <%= form_tag sessions_path do %>
            <div class="form-group">
              <%= label_tag :name %><br />
              <%= text_field_tag :name %>
            </div>
            <div class="form-group">
              <%= submit_tag "Login", class: "btn bg-success text-light" %>
            </div>
          <% end %>
        </div>
        <%= link_to 'Back', root_path, class: "btn text-light bg-info" %>
    </div>
  </div> 
</div>